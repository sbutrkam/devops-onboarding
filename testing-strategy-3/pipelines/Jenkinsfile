pipeline {
    agent any

    tools {nodejs "NodeJS"}

    environment {
        PROJECT_PATH="${env.JENKINS_HOME}/workspace/onboarding-3/testing-strategy-3"
        SCRIPTS_PATH="${PROJECT_PATH}/scripts"
        WEB_PATH="${PROJECT_PATH}/web"
        DEV="dev"
        ALPHA="alpha"
        PREPROD="preprod"
        PROD="prod"
    }

    stages {
        stage('install') {
           steps {
                dir("${SCRIPTS_PATH}") {
                    sh """
                    echo "install"
                    """
                    sh "npm install -g yarn"
                    ./install.sh
                    ./application-management.sh build
                    ./application-management.sh start &&
                }
            }
        }
        stage('Build') {
           steps {
                dir("${WEB_PATH}") {
                    sh """
                    echo "Build"
                    """
                }
            }
        }
        stage('Testing') {
            steps {
                dir("${SCRIPTS_PATH}") {
                   sh """
                    echo "Testing"
                    """
                }
            }
        }
        stage('Close') {
            steps {
                dir("${SCRIPTS_PATH}") {
                   sh """
                    echo "Close"
                    """
                }
                ./application-management.sh close
            }
        }
    }
}